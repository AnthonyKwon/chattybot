    "version": "0.2.0",
    "configurations": [
        {
            "name": "Default",
            "request": "launch",
            "type": "node",
            "cwd":"${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [ "run-script", "start" ],
            "skipFiles": [
                "<node_internals>/**",
                "logs/**"
            ]
        },
        {
            "name": "Dev",
            "request": "launch",
            "type": "node",
            "cwd":"${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [ "run-script", "dev" ],
            "skipFiles": [
                "<node_internals>/**",
                "logs/**"
            ]
        }
    ]
}